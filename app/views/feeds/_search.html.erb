<%#= form_tag(feeds_path, method: "get") do %>
<%= form_for :feed, url: feeds_path, method: :get do |feed_form| %>
  <%= feed_form.label :tag, "Your tag of choice:" %>
  <%= feed_form.text_field :tag %>
  <br>
  <%= feed_form.fields_for :sources do |sources_form| %>
    <%= sources_form.check_box :stackoverflow %>
    <%= sources_form.label :stackoverflow %>
    <br>
    <%= sources_form.check_box :twitter %>
    <%= sources_form.label :twitter %>
    <br>
    <%= sources_form.check_box :youtube %>
    <%= sources_form.label :youtube %>
    <br>
  <% end %>
  <%= feed_form.submit "Search" %>
<% end %>
