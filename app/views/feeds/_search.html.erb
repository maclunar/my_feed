<%= form_tag(feeds_path, method: "get") do %>
  <%= label_tag(:q, "Your tag of choice:") %>
  <%= text_field_tag :tag %>
  <br>
  <%= check_box_tag :'sources[stackoverflow]' %>
  <%= label_tag :stackoverflow %>
  <br>
  <%= check_box_tag :'sources[twitter]' %>
  <%= label_tag :twitter %>
  <br>
  <%= check_box_tag :'sources[youtube]' %>
  <%= label_tag :youtube %>
  <br>
  <%= submit_tag("Search") %>
<% end %>
